<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"

>
    <RelativeLayout
        android:id="@+id/skin_all_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/layer_all_rl_bg"
    >

        <LinearLayout
            android:id="@+id/skin_click_ll"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
        >

            <TextView
                android:id="@+id/skin_reset_tv"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:background="@drawable/tv_reset_bg"
                android:gravity="center"
                android:padding="5dp"
                android:text="重置"
                android:textColor="@color/color1"
                android:textSize="18dp"
            />
            <TextView
                android:id="@+id/skin_red_tv"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:background="@drawable/tv_red_bg"
                android:gravity="center"
                android:padding="5dp"
                android:text="红色"
                android:textColor="@color/color1"
                android:textSize="18dp"

            />
            <TextView
                android:id="@+id/skin_color_tv"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:background="@drawable/tv_color_bg"
                android:gravity="center"
                android:padding="5dp"
                android:text="多彩"
                android:textColor="@color/color1"
                android:textSize="18dp"

            />


        </LinearLayout>
        <RelativeLayout
            android:id="@+id/skin_content_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/skin_click_ll"
            android:layout_margin="15dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/layer_rl_bg"
        >

            <com.yw.skin.ywskin.wiget.CustomCircleView
                android:id="@+id/skin_cricle"
                android:layout_width="@dimen/skin_tv_circle_with"
                android:layout_height="@dimen/skin_tv_circle_height"
                android:layout_centerInParent="true"
                app:radius="@integer/skin_tv_circle_radues"
                app:solid_color="@color/reset_blist1_color"

            />

            <TextView
                android:id="@+id/skin_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/text_margin_top"
                android:layout_marginLeft="@dimen/text_view_margin_left"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/skin_color_name"
                android:textColor="@color/reset_blist1_color"
                android:textSize="@dimen/text_size"
            />
        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>
